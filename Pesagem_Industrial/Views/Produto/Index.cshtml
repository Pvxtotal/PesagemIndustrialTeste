@model Pesagem_Industrial.Models.Produto

@{
    ViewBag.Title = "InserirProduto";
}

<h2>Cadastrar Produto</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Origem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Origem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Origem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" col-md-2>Unidade</label>
            <div class="col-md-10">
                <select name="Tipo" id="Tipo" class="form-control" onchange="ObterMedidas(this.value)">
                    <option value="">Selecione uma Unidade</option>
                    @foreach (var item in ViewBag.Medidas)
                    {
                        <option value="@item">@item</option>
                    }

                </select>
                @Html.ValidationMessageFor(model => model.Unidade.Tipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" col-md-2>Medida</label>
            <div class="col-md-10">
                <select name="Unidade_Id" id="Unidade_Id" class="form-control">
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" col-md-2>Grupo</label>
            <div class="col-md-10">
                <select name="Grupo_Id" id="Grupo_Id" class="form-control">
                    @foreach (var item in ViewBag.Grupos)
                    {
                        <option value="@item.Id">@item.Descricao</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" col-md-2>Armazém</label>
            <div class="col-md-10">
                <select name="Armazem_Id" id="Armazem_Id" class="form-control">
                    @foreach (var item in ViewBag.Armazens)
                    {
                        <option value="@item.Id">@item.Local</option>
                    }
                </select>
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>

<script type="text/javascript">
    function ObterMedidas(tipo) {
        var mensagem = "<option value='0'> Por favor aguarde...</option>";
        $("#Unidade_Id").html(mensagem).show();

        var url = "/Produto/ListarMedidas";

        $.ajax({
            url: url,
            data: { Tipo: tipo },
            cache: false,
            type: "POST",
            success: function (data) {
                var markup = "";
                for (var x = 0; x < data.length; x++) {
                    markup += "<option value=" + data[x].Value + ">" + data[x].Text + "</option>";
                }
                $("#Unidade_Id").html(markup).show();
            },
            error: function (response) {
                alert("Erro: " + response);
            }
        });
    }
</script>
