@model IEnumerable<Pesagem_Industrial.Models.Produto>

@{
    ViewBag.Title = "ListarProduto";
}

<h2>ListarProduto</h2>

<p>
    @Html.ActionLink("Cadastrar Produto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Origem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            Armazém
        </th>
        <th>
            Unidade
        </th>
        <th>
            Grupo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Origem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCadastro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Armazem.Local)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unidade.Medida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grupo.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
