@model IEnumerable<Pesagem_Industrial.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar Usuário", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Perfil)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Perfil)
            </td>
            <td>
                <button type="button" class="btn" data-toggle="modal" data-target="#myModal_@item.Id">Excluir</button>
            </td>
        </tr>
    }

</table>


@foreach (var item in Model)
{


    <!-- Modal -->
    <div id="myModal_@item.Id" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Excluir</h4>
                </div>
                <form action="@Url.Action("Delete", "Usuarios")" method="post">

                    <div class="modal-body">
                        <h4 class="text-danger">Deseja realmente excluir este usuário?</h4>
                        <input type="hidden" value="@item.Id" name="Id"/>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Confirmar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

}




